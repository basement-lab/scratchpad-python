{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run File",
			"type": "process",
			"command": "python",
			"args": [
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"presentation": {
				"focus": false,
			}
		},
		{
			"label": "Activate Environment",
			"type": "shell",
			"command": "source ${workspaceFolder}/bin/activate",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"focus": true,
				"echo": true
			},
			"problemMatcher": []
		}
	],
	"presentation": {
		"reveal": "always",
		"echo": true,
	}
}
